                <note/>
                <rel f="">reflection</rel>
                <arg f="" n="2">of history</arg>
            </example>
            <example name="arg1 as mirror" src="" type="">
                <inflection aspect="ns" form="ns" person="ns" tense="ns" voice="ns"/>
