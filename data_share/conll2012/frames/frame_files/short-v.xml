                <role descr="giver of change" f="" n="0"/>
                <role descr="receiver of change" f="" n="1"/>
                <role descr="explicit mention of change" f="" n="2"/>
                
                <note>Not restricted to money; can be used anytime someone doesn't receive
                    everything they "should" be getting.
                </note>
            </roles>
            
            <example name="poor John" src="" type="">
                <inflection aspect="ns" form="full" person="ns" tense="past" voice="active"/>
