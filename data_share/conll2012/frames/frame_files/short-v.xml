        <roleset framnet="-" id="short.01" name="sell stocks short" vncls="-">
            <roles>
                <role descr="stock broker" f="" n="0"/>
                <role descr="stocks" f="" n="1"/>
                
                <note/>
            </roles>
            
            <example name="wsj-ese strikes again!" src="" type="">
                <inflection aspect="ns" form="gerund" person="ns" tense="ns" voice="active"/>
                <text>For example, [an investor]-1 may seek [*-1]-2 to profit during some
                    takeover situations by [*-2] buying stock in one company involved
                    and shorting the stock of the other.
                </text>
                <arg f="" n="0">[*-2]</arg>
                <rel f="">shorting</rel>
                <arg f="" n="1">the stock of the other</arg>
                
                <note/>
            </example>
            
            
            
            
