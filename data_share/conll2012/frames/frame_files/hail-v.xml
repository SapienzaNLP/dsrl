            <example name="automatically generated" src="" type="">
                <inflection aspect="ns" form="full" person="third" tense="present" voice="active"/>
                <text>Lone Star 's Bond Corp. parent , for instance , hails from Perth , Australia .</text>
                <arg f="" n="0">Lone Star 's Bond Corp. parent</arg>
                <arg f="dis" n="m">for instance</arg>
                <rel f="">hails</rel>
                <arg f="" n="1">from Perth , Australia</arg>
                
                <note/>
            </example>
            
            
            
            
            <note/>
