                <role descr="summoner" f="" n="0">
                    <vnrole vncls="60" vntheta="agent"/>
                </role>
                
                <role descr="entity being summoned" f="" n="1">
                    <vnrole vncls="60" vntheta="patient"/>
                </role>
                <role descr="hailed to (proposition not goal)" f="" n="">
                    <vnrole vncls="60" vntheta="proposition"/>
                </role>
                <note/>
            </roles>
            
            <example name="standard transitive" src="WSJ" type="-">
                <inflection aspect="ns" form="participle" person="other" tense="past" voice="active"/>
                <text>We talked after I hailed his Jeep marked with the U.N. flag .</text>
                
                <arg f="" n="0">I</arg>
                <rel f="">hailed</rel>
                <arg f="" n="1">his jeep marked with the U.N. flag</arg>
                <note/>
            </example>
            <example name="all args" src="internet" type="-">
                <inflection aspect="ns" form="participle" person="third" tense="past" voice="active"/>
                <text>A group of soldiers hailed him *trace* to come ashore .</text>
                
                <arg f="" n="0">a group of soldiers</arg>
                <rel f="">hailed</rel>
                <arg f="" n="1">him</arg>
                <arg f="" n="2">*trace* to come ashore</arg>
                <note/>
            </example>
            <example name="with goal" src="internet" type="-">
                <inflection aspect="ns" form="participle" person="third" tense="past" voice="active"/>
                <text>Glad to return, tho' hope could grant no more, And chains and torture hailed him to the shore.</text>
                
                <arg f="" n="0">chains and torture</arg>
                <rel f="">hailed</rel>
                <arg f="" n="1">him</arg>
                <arg f="gol" n="m">to the shore.</arg>
                <note/>
            </example>
            <note>Added by Julia based on WSJ. Member of Vncls 60. Comparison to summon.</note>
