            </roles>
            
            <example name="Basic transitive">
                <text>
                    Riverdance always jollifies John and Mary. 
                </text>
                <arg n="0">Riverdance</arg>
                <arg n="M" f="TMP">always</arg>
                <rel>jollifies</rel>
                <arg n="1">John and Mary</arg>
            </example>
            
            <example name="All arguments">
                <text>
                    Mary jollified John with her rendition of Riverdance. 
                </text>
                <arg n="0">Mary</arg>
                <rel>jollified</rel>
                <arg n="1">John</arg>
                <arg n="2">with her rendition of Riverdance</arg>
            </example>
            
