                <role descr="Covered with what, floor material" n="2"/>
            </roles>
            
            <example name="all arguments">
                <text>
                    Mary floored her new apartment with marble tile.
                </text>
                <arg n="0">Mary</arg>
                <rel>floored</rel>
                <arg n="1">her new apartment</arg>
                <arg n="2">with marble tile</arg>
            </example>
        </roleset>
        
