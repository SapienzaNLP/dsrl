    <predicate lemma="floor">
        <note>
            Frames file for 'floor'  based on internet usage examples, expansion 
            via VN. VerbNet entry 31.1.  Comparison to 'astound' and 'cover.'  
        </note>
        
        <roleset id="floor.01" name="to bring to the floor, literally or
  metaphorically, by shocking or striking" vncls="31.1">
            <roles> 
                <role descr="cause of flooring" n="0">
                    <vnrole vncls="31.1" vntheta="Cause"/>
                </role>
                <role descr="floored entity" n="1">
                    <vnrole vncls="31.1" vntheta="Experiencer"/>
                </role>
                 
                <role descr="Instrument or Manner if separate from Arg 0" n="2"/>
            </roles>
            
            <example name="transitive, literal">
                
                <text>
                    John floored his opponent with one blow
                </text>
                <arg n="0">John</arg>
                <rel>floored</rel>
                <arg n="1">his opponent</arg>
                <arg n="2">with one blow</arg>
            </example>
            
            <example name="passive, metaphorical">
                <text>
                    I-1 was floored *-1 by the problem
                </text>
                <rel>floored</rel>
                <arg n="1">*-1</arg>
                <arg n="0">by the problem</arg>
            </example>
        </roleset>
        
        <roleset id="floor.02" name="to cover or furnish with a floor" vncls="-">
