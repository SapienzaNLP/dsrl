                <role descr="batter" n="0">
                    <vnrole vncls="17.2" vntheta="Agent"/>
                </role>
                <role descr="position or stats" n="1">
                    <vnrole vncls="17.2" vntheta="Theme"/>
                </role>
            </roles>
            
            <example name="ey, batta batta">
                <inflection aspect="progressive" form="participle" person="ns" tense="ns" voice="active"/>
                <text>
                    The A-men batting Nos. 6 through 9, a.k.a. the ``bottom of the
                    order,'' got seven of their team's 11 hits and scored four of its
                    runs in a 5-0 decision. 
                </text>
                <arg n="0">The A-men</arg>
                <rel>batting</rel>
                <arg n="1">Nos. 6 through 9, a.k.a. the ``bottom of the order,''</arg>
            </example>
            
